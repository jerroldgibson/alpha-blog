<h1>List of Articles</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @articles.each do |a| %>
  <tr>
    <td><%= link_to a.title, article_path(a) %></td>
    <td><%= truncate(a.description, length: 100) %></td>
    <td><%= link_to "Edit", edit_article_path(a), class:"btn btn-xs btn-primary" %></td>
    <td><%= link_to "Show", article_path(a), class: "btn btn-xs btn-success" %></td>
    <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>

  </tr>
  <% end %>

</table>

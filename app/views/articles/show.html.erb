<div class="container-fluid content">
  <div  class="well col-xs-8 col-xs-offset-2">
        <% if @article.user %>
          <ul class="listing">
            <div class="row">
              <div class="col-md-4 col-md-offset-4">
                <li>Created by:</li>
                <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
                <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
              </div>
            </div>
          </ul>
        <% end %>


    <dl class="dl-horizontal">
      <dt>Title:</dt>
      <dd><%= @article.title %></dd>
      <dt>Description:</dt>
      <dd><%= simple_format(@article.description) %></dd>
    </dl>

    <div class="article-actions">
      <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete Article", edit_article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete article?"}, class: "btn btn-xs btn-danger" %>
      <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>
</div>

